        <RadioButton x:Name="_1" Content="никак" HorizontalAlignment="Left" Margin="72,313,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="_2" Content="убывание" HorizontalAlignment="Left" Margin="75,347,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="_3" Content="возрастание" HorizontalAlignment="Left" Margin="73,381,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
